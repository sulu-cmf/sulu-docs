{% set page_width = '940px' %}
{% set sidebar_width = '210px' %}
{% set sidebar_gutter_width = '48px' %}

@import url("basic.css");

*,
*::before,
*::after {
    box-sizing: border-box;
}

/* Body */
body {
    font-family: "IBM Plex Sans", sans-serif;
    font-size: 16px;
    line-height: 24px;
    background-color: white;
    color: #112a46;
    margin: 0;
    padding: 0;
    padding-bottom: 100px;

    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
    font-variant-ligatures: none;
    text-rendering: optimizeLegibility;
    -webkit-text-size-adjust: 100%;
}

body.nav-open {
    height: 100vh;
    overflow: hidden;
}

/* Basic Layout */
div.document {
    width: 100%;
    padding: 0 32px;
    margin: 0 auto;
}

div.documentwrapper {
    float: left;
    width: 100%;
}

div.bodywrapper {
    margin: 0 0 0 {{ sidebar_width }};
    padding: 0 0 0 {{ sidebar_gutter_width }};
}

/* Breadcrumb */
div.related {
    width: 100%;
    padding: 0 32px;
    margin: 30px auto;
    font-size: 12px;
    line-height: 16px;
}

div.related li.right:first-child {
    margin-right: 0 !important;
}

div.related ul {
    padding: 0 0 0 {{ sidebar_width }};
    margin-left: {{ sidebar_gutter_width }};
}

/* Sidebar */
div.sphinxsidebar {
    width: {{ sidebar_width }};
    font-size: 12px;
    line-height: 16px;
}

p.logo {
    display: block;
    padding: 5px 0;
}

img.logo {
    height: 34px;
}

div.sphinxsidebarwrapper {
    padding: 0;
}

.sphinxsidebar h3 {
    margin-top: 32px;
    margin-bottom: 8px;
    font-size: 12px;
    line-height: 16px;
    font-weight: bold;
}

div.sphinxsidebar ul {
    padding-left: 0;
    margin-left: 0;
}

div.sphinxsidebar ul ul {
    list-style: circle;
    padding-left: 1.25em;
    margin-left: 0;
}

div.sphinxsidebar input {
    border-color: #e7e9ec;
}

div.sphinxsidebar a {
    color: #112a46;
    text-decoration: none;
}

div.sphinxsidebar a:hover {
    color: #52B6CA;
    text-decoration: underline;
}

div.sphinxsidebar a.current {
    color: #52B6CA;
}

div.sphinxsidebar li {
    padding-top: 3px;
    padding-bottom: 3px;
    list-style: none;
}

div.sphinxsidebar li ul {
    padding-top: 3px;
}

/* Body */
div.body {
    max-width: 100%;
}

div.body p {
    max-width: 75ch;
}

div.body h1 {
    margin-bottom: 50px;
}

div.body h2,
div.body h3,
div.body h4,
div.body h5,
div.body h6 {
    margin-bottom: 16px;
}

h1 + .section > h2:first-child {
    margin-bottom: 25px;
}

div.body .section {
    margin-bottom: 48px;
}

div.body .section:last-child {
    margin-bottom: 0;
}

/* Toctree */
div.toctree-wrapper {
    font-size: 16px;
    line-height: 22px;
}

.toctree-wrapper li {
    padding-top: 3px;
    padding-bottom: 3px;
}

div.toctree-wrapper li ul {
    padding-top: 3px;
}

div.toctree-wrapper a {
    text-decoration: none;
}

div.toctree-wrapper a {
    color: #112a46;
    text-decoration: none;
}

div.toctree-wrapper a:hover {
    color: #52B6CA;
    text-decoration: underline;
}

div.toctree-wrapper a.current {
    color: #52B6CA;
}

/* Mobile */
@media screen and (max-width: 1024px) {
    div.bodywrapper {
        margin: 0;
        padding-left: 0;
    }

    div.sphinxsidebar {
        width: auto;
        margin: 0;
    }

    div.sphinxsidebar .logo {
        display: none;
    }

    div.document,
    div.related {
        max-width: 720px;
    }

    div.related ul {
        padding: 0;
        margin: 0;
    }
}

/* Code highlight */
pre {
    background: #eee;
    padding: 7px 10px;
    margin: 15px 0;
    line-height: 1.3em;
    font-family: "IBM Plex Mono", monospace;
}

code {
    line-height: 1.3em;
    font-family: "IBM Plex Mono", monospace;
}

.highlight {
    max-width: 75ch;
}

.highlight:hover {
    max-width: 100%;
}

/* admonition */
div.admonition {
    background: rgba(204, 204, 204, 0.25);
    margin: 16px 0;
    padding: 16px;
    max-width: 75ch;
}

div.admonition p.admonition-title {
    font-size: 22px;
    line-height: 32px;
}

div.admonition p.last {
    margin-bottom: 0;
}

div.admonition.warning {
    background: rgba(255, 204, 0, 0.25);
}

div.admonition.caution {
    background: rgba(255, 204, 0, 0.25);
}

/* Links */
a {
    color: #52B6CA;
    text-decoration: underline;
}

a:hover {
    text-decoration: underline;
}

a.headerlink,
a.headerlink:hover {
    color: #52B6CA;
    text-decoration: none;
}

/* Search */
div.sphinxsidebar #searchbox .search {
    position: relative;
}

div.sphinxsidebar #searchbox input[type="text"] {
    width: 80%;
    height: 30px;
}

div.sphinxsidebar #searchbox input[type="submit"] {
    position: absolute;
    top: 0;
    right: 0;
    width: 20%;
    height: 100%;
}

/* Basics */

ul {
    padding-left: 1.25em;
}

ol {
    padding-left: 1.75em;
}

ul ul,
ul ol,
ol ol,
ol ul {
    margin-top: 0;
    margin-bottom: 0;
}

/* Headlines */
h1, h2, h3, h4, h5, h6 {
    font-family: "IBM Plex Sans", sans-serif;
}

h1 {
    font-size: 42px;
    line-height: 50px;
}

h2 {
    font-size: 32px;
    line-height: 50px;
}

h3 {
    font-size: 24px;
    line-height: 38px;
}

h4 {
    font-size: 22px;
    line-height: 32px;
}

h5 {
    font-size: 20px;
    line-height: 27px;
}

h6 {
    font-size: 20px;
    line-height: 27px;
}

/* Figure */
.align-default,
img.align-default,
figure.align-default,
table.align-default {
    margin-left: 0;
    margin-right: 0;
    padding-left: 0;
    margin-right: 0;
    text-align: left;
}

/* Img */
img {
    max-width: 75ch;
}

img.align-center,
.figure.align-center,
object.align-center,
img.align-right,
.figure.align-right,
object.align-right {
    max-width: 75ch;
    /* not centered */
    margin-left: 0;
    margin-right: 0;
}

/* Table */
table {
    width: 100%;
    max-width: 75ch;
}

.sphinxsidebar code,
.toctree-wrapper code
{
    font-weight: inherit;
    font-family: inherit;
}
